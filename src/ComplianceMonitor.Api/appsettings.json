{
    "ConnectionStrings": {
        "DefaultConnection": "Host=localhost;Database=compliancemonitor;Username=postgres;Password=dbpassword;Port=5432"
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "AllowedOrigins": [
        "http://localhost:3000"
    ],
    "Kubernetes": {
        "ApiUrl": "",
        "Token": "",
        "KubeconfigPath": "~/.kube/config",
        "VerifySsl": true
    },
    "Trivy": {
        "TrivyPath": "trivy",
        "TimeoutSeconds": 300,
        "ScanIntervalHours": 24,
        "UseOpenShiftCredentials": true,
        "OpenShiftRegistry": "image-registry.openshift-image-registry.svc:5000"
    },
    "TrivyOperator": {
        "Enabled": true,
        "TestNamespace": "default"
    },
    "BackgroundService": {
        "InitialDelayMinutes": 5,
        "ScanIntervalMinutes": 360,
        "ForceScans": false
    }
}